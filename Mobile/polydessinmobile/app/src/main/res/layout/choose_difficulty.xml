<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingHorizontal="100dp"
    android:paddingVertical="40dp">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/app_logo"/>
    <TextView
        android:id="@+id/choose_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select difficulty"
        android:textSize="28sp"
        android:layout_alignTop="@id/app_icon"
        android:layout_alignBottom="@id/app_icon"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_toEndOf="@id/app_icon"
        android:layout_marginStart="20dp"/>

    <android.widget.Button
        android:id="@+id/easy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_difficulty_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corners_empty_background"
        android:backgroundTint="@color/colorAccent"
        android:text="Easy"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <android.widget.Button
        android:id="@+id/normal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Normal"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:background="@drawable/rounded_corners_empty_background"
        android:layout_below="@id/easy_button"
        android:layout_marginVertical="5dp"/>

    <android.widget.Button
        android:id="@+id/hard_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Hard"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:background="@drawable/rounded_corners_empty_background"
        android:layout_below="@id/normal_button"
        android:layout_marginVertical="5dp"/>
</RelativeLayout>