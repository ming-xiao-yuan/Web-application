<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@color/colorPrimaryMedium">

    <RelativeLayout
        android:id="@+id/profile_infos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/user_avatar_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:background="@drawable/white_round_border"
            android:layout_marginStart="70dp"
            android:src="@drawable/empty_avatar"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/user_avatar_profile"
            android:layout_alignTop="@id/user_avatar_profile"
            android:textSize="40sp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/firstname_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/username_profile"
            android:layout_below="@id/username_profile"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/lastname_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/firstname_profile"
            android:layout_below="@id/username_profile"
            android:textSize="24sp"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:id="@+id/badge1_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/white_round_border"
            android:padding="2dp"
            android:layout_alignStart="@id/username_profile"
            android:layout_alignBottom="@id/user_avatar_profile"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:id="@+id/badge2_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/white_round_border"
            android:padding="2dp"
            android:layout_toEndOf="@id/badge1_profile"
            android:layout_alignBottom="@id/badge1_profile"
            android:layout_marginEnd="10dp"/>
        <ImageView
            android:id="@+id/badge3_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/white_round_border"
            android:padding="2dp"
            android:layout_toEndOf="@id/badge2_profile"
            android:layout_alignBottom="@id/badge1_profile"/>
        <ImageView
            android:id="@+id/level_bar_profile"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/level_bar"
            android:layout_alignStart="@id/user_avatar_profile"
            android:layout_alignEnd="@id/user_avatar_profile"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/user_avatar_profile"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/progress_bar_profile"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@drawable/progression_bar"
            android:layout_alignStart="@id/level_bar_profile"
            android:layout_alignTop="@id/level_bar_profile"/>
        <TextView
            android:id="@+id/progression_value_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/level_bar_profile"
            android:layout_alignTop="@+id/level_bar_profile"
            android:layout_alignEnd="@+id/level_bar_profile"
            android:layout_alignBottom="@+id/level_bar_profile"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/level_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/level_shape"
            android:layout_toStartOf="@id/level_bar_profile"
            android:layout_alignBottom="@id/user_avatar_profile"
            android:layout_marginBottom="-10dp"
            android:layout_marginEnd="-45dp"/>
        <TextView
            android:id="@+id/level_value_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/level_profile"
            android:layout_alignTop="@+id/level_profile"
            android:layout_alignEnd="@+id/level_profile"
            android:layout_alignBottom="@+id/level_profile"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/rolling_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_settings"
            android:background="@drawable/round_button"
            android:padding="10dp"
            android:onClick="openEditProfile"
            android:scaleType="fitXY"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_below="@id/profile_infos"
        android:textSize="36sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:layout_below="@id/settings"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/robot_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual player voice"
        android:layout_below="@id/music"
        android:layout_alignStart="@id/music"
        android:textSize="30sp"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/music_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/robot_switch"
        android:layout_alignTop="@id/music"
        android:layout_alignBottom="@id/music"
        android:layout_toEndOf="@id/robot_voice" />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/robot_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/robot_voice"
        android:layout_alignTop="@id/robot_voice"
        android:layout_alignBottom="@id/robot_voice"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_below="@id/robot_voice"
        android:textSize="36sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classic"
        android:layout_alignBottom="@id/statistics"
        android:layout_alignStart="@id/victory_percentage_value_classic"
        android:textSize="30sp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solo"
        android:layout_alignBottom="@id/statistics"
        android:layout_toEndOf="@id/classic"
        android:textSize="30sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="100dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/game_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game played :"
        android:layout_below="@id/statistics"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/game_played_value_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/victory_percentage_value_classic"
        android:layout_alignBottom="@id/game_played"/>
    <TextView
        android:id="@+id/game_played_value_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/solo"
        android:layout_alignTop="@id/game_played"
        android:layout_alignBottom="@id/game_played"/>
    <TextView
        android:id="@+id/victory_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage of victory :"
        android:layout_below="@id/game_played"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/victory_percentage_value_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_toEndOf="@id/victory_percentage"
        android:layout_alignBottom="@id/victory_percentage"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/victory_percentage_value_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="-"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@id/solo"
        android:layout_alignBottom="@id/victory_percentage"/>
    <TextView
        android:id="@+id/game_time_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game time average :"
        android:layout_below="@id/victory_percentage"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/game_time_average_value_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/victory_percentage_value_classic"
        android:layout_alignBottom="@id/game_time_average"/>
    <TextView
        android:id="@+id/game_time_average_value_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/solo"
        android:layout_alignBottom="@id/game_time_average"/>
    <TextView
        android:id="@+id/total_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total game time :"
        android:layout_below="@id/game_time_average"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/total_game_time_value_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/victory_percentage_value_classic"
        android:layout_alignBottom="@id/total_game_time"/>
    <TextView
        android:id="@+id/total_game_time_value_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@id/solo"
        android:layout_alignBottom="@id/total_game_time"/>
    <TextView
        android:id="@+id/best_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best score :"
        android:layout_below="@id/total_game_time"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/best_score_value_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@+id/victory_percentage_value_classic"
        android:layout_toEndOf="@id/best_score"
        android:layout_alignBottom="@id/best_score"/>
    <TextView
        android:id="@+id/best_score_value_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignStart="@+id/solo"
        android:layout_toEndOf="@id/best_score"
        android:layout_alignBottom="@id/best_score"/>
    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_below="@id/best_score"
        android:textSize="36sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/login_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        android:backgroundTint="@color/colorPrimaryLight"
        android:shadowColor="@color/white"
        android:text="Login history"
        android:textAlignment="textStart"
        android:paddingStart="40dp"
        android:textAllCaps="false"
        android:textSize="30sp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="openLoginHistory"/>
    <Button
        android:id="@+id/game_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_history"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="Game history"
        android:textAlignment="textStart"
        android:paddingStart="40dp"
        android:textAllCaps="false"
        android:textSize="30sp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="openGameHistory">

    </Button>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:backgroundTint="@color/white"
        android:layout_alignEnd="@id/login_history"
        android:layout_alignTop="@id/login_history"
        android:layout_alignBottom="@id/login_history"
        android:layout_marginEnd="40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/login_history"
        android:layout_marginHorizontal="40dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:backgroundTint="@color/white"
        android:layout_alignEnd="@id/game_history"
        android:layout_alignTop="@id/game_history"
        android:layout_alignBottom="@id/game_history"
        android:layout_marginEnd="40dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/game_history"
        android:layout_marginHorizontal="40dp"/>

    <ImageButton
        android:id="@+id/chat_button_popup_user_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_chat"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corners_button_yellow"/>

    <TextView
        android:id="@+id/notification_popup_user_profile"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/chat_button_popup_user_profile"
        android:layout_alignEnd="@+id/chat_button_popup_user_profile"
        android:background="@drawable/round_notification"
        android:backgroundTint="@color/redNotification"
        android:gravity="center"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:visibility="visible"/>

</RelativeLayout>