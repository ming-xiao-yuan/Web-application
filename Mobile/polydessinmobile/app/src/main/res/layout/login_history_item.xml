<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@color/colorPrimaryLight">

        <ImageView
            android:id="@+id/connection_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/app_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/connection_bool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login at  "
            android:layout_toEndOf="@+id/connection_logo"
            android:layout_marginStart="20dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/login_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2000 23:59"
            android:layout_toEndOf="@+id/connection_bool"
            android:textSize="24sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>