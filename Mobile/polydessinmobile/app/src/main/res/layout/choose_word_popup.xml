<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingHorizontal="100dp"
    android:paddingVertical="40dp">
    <TextView
        android:id="@+id/choose_word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the word you want to draw"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginVertical="5dp"/>

    <android.widget.Button
        android:id="@+id/word1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_word_text"
        android:layout_marginVertical="5dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rounded_corners_button_pale_yellow"
        android:text="word1"
        android:textSize="24sp" />

    <android.widget.Button
        android:id="@+id/word2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="word2"
        android:textSize="24sp"
        android:background="@drawable/rounded_corners_button_pale_yellow"
        android:layout_below="@id/word1_button"
        android:layout_marginVertical="5dp"/>

    <android.widget.Button
        android:id="@+id/word3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="word3"
        android:textSize="24sp"
        android:background="@drawable/rounded_corners_button_pale_yellow"
        android:layout_below="@id/word2_button"
        android:layout_marginVertical="5dp"/>
</RelativeLayout>