            android:layout_margin="10dp"/>
    </RelativeLayout>
    <android.widget.Button
        android:id="@+id/ok_badge_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/rounded_corners_empty_background"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignEnd="@id/badges"
        android:layout_below="@id/badges"
        android:paddingHorizontal="10dp"
        android:textSize="24sp"
        android:layout_marginVertical="40dp"
        android:layout_marginEnd="10dp"/>
    <android.widget.Button
        android:id="@+id/cancel_badge_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_toStartOf="@id/ok_badge_button"
        android:layout_alignTop="@id/ok_badge_button"

        android:layout_marginEnd="20dp"
        android:textColor="@color/dark_gray"
        android:textSize="24sp"
        android:background="@drawable/rounded_button_border_grey"
        android:paddingHorizontal="16dp"
        android:textAllCaps="false"/>


