<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameHistoryActivity"
    android:id="@+id/activity_login_history">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="4dp"
        tools:listitem="@layout/login_history_item"
        android:background="@color/colorPrimaryDark"/>
    <ImageButton
        android:id="@+id/chat_button_popup_login_history"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_chat"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corners_button_yellow"/>

    <TextView
        android:id="@+id/notification_popup_login_history"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/chat_button_popup_login_history"
        android:layout_alignEnd="@+id/chat_button_popup_login_history"
        android:background="@drawable/round_notification"
        android:backgroundTint="@color/redNotification"
        android:gravity="center"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:visibility="visible"/>
</RelativeLayout>