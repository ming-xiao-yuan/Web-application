<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="20dp">
    <TextView
        android:id="@+id/game_end_title_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over !"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/avatar_end_solo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/game_end_title_solo"/>

    <TextView
        android:id="@+id/game_result_solo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar_end_solo"
        android:layout_alignBottom="@id/avatar_end_solo"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/avatar_end_solo"
        android:layout_marginStart="20dp"
        android:textSize="24sp"/>

    <android.widget.Button
        android:id="@+id/ok_end_game_solo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/rounded_corners_empty_background"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/avatar_end_solo"
        android:paddingHorizontal="10dp"
        android:textStyle="normal"
        android:textSize="24sp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>