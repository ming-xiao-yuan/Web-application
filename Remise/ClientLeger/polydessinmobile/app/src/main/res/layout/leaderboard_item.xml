<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/player_container_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimaryLight">
        <TextView
            android:id="@+id/position_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@id/player_avatar_leaderboard"
            android:layout_alignBottom="@id/player_avatar_leaderboard"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/player_avatar_leaderboard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="175dp"/>
        <TextView
            android:id="@+id/player_username_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_toEndOf="@id/player_avatar_leaderboard"
            android:layout_alignTop="@id/player_avatar_leaderboard"
            android:layout_alignBottom="@id/player_avatar_leaderboard"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/player_score_leaderboard"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/player_score_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/player_username_leaderboard"
            android:layout_alignBottom="@id/player_username_leaderboard"
            android:layout_marginEnd="20dp"
            android:gravity="center"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>